@{
  Layout = "_Layout";
}

<div class="container">
  <div class="h-100 p-5 text-white bg-dark rounded-3 text-center">
    <h1 style="text-align: center;">Welcome to Ollivanders</h1>
    <small style="text-align: center;">Magic wands since 1865</small>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      // enter wand quiz to trigger modal
    </div>
    <script>
      function showWandDetails(wandId) {
        $("#showWand").click(function() {
          $.ajax({
          type: "GET",
          url: '../AlleyShops/Wands/Details',
          data: { 'id': wnadId },
          success: function (result) {
            $("#wandName").text(result.thisWand.$values[0].name);
            $("#wandWood").text(result.thisWand.$values[0].wood);
            $("#woodHeart").text(result.thisWand.$values[0].heart);
            $("#wandId").val(result.thisWand.$values[0].wandId);
            $("#detailsCard").show();
            },
            error: function (httpObj) {
              if (httpObj.status == 401) {
                alert("you aren't yet logged in");
              } else {
                alert("Error while getting wand details");
              }
            }
          });
        });
      }
    </script>
    <div class="col-md-6 col-sm-12">
      <div class="card" id="detailsCard" style="display:none;">
        <div class="card-header text-dark text-center">
          <input type="hidden" id="wandId">
          <h2 id="WandName"></h2>
        </div>
        <div class="card-body">
          <div class="card-text text-dark text-center">
            Wood: <span id="WandWood"></span>
            <br>
            Heart: <span id="WoodHeart"></span>
            <br>
            Length: <span id="WoodLength"></span>
          </div>
        </div>
        <div class="card-footer text-center">
          <button class="btn btn-dark" type="button" id="acceptWand">accept wand</button>
        </div>
      </div>
    </div>
  </div>
</div>