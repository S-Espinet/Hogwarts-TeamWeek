@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (User.Identity.IsAuthenticated && @Model.House != "")
{
    <div id=@Model.House class="full-size">
    <div id="frogs">
    </div>
    </div>
}
else if (User.Identity.IsAuthenticated)
{
    // pass sorting quiz 
    <div id="the-great-hall" class="full-size">
        //pop-up window
        <div>
            <button type="button" id="start-sorting">Start Sorting</button>
            //hidden form
            <form id="sorting-quiz">
                <div class="form-group">
                    <label>Quistion 1</label>
                    <label>
                        <input type="radio" name="" value="" checked>
                        Choice 1
                    </label>
                    <label>
                        <input type="radio" name="" value="" checked>
                        Choice 2
                    </label>
                    <label>
                        <input type="radio" name="" value="" checked>
                        Choice 3
                    </label>
                    <label>
                        <input type="radio" name="" value="" checked>
                        Choice 4
                    </label>
                </div>
            </form>
        </div>
    </div>
}
else
{
    // request to register and/or login
    <div id="lake" class="full-size">
      <video src="Hogwarts\wwwroot\video\HogwartsNight.mp4" loop muted autoplay></video>  
    </div>
    
}